# ─── Project ───────────────────────────────────────────────────────────────
ENVIRONMENT=production
PROJECT_NAME=Plant Tracker

# ─── Security ──────────────────────────────────────────────────────────────
# Сгенерируй: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_GENERATE_A_STRONG_SECRET_KEY

ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── PostgreSQL ────────────────────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=plant_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=plant_db

# ─── Redis ─────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# ─── Superuser (seed при первом запуске) ───────────────────────────────────
FIRST_SUPERUSER_EMAIL=admin@plant-tracker.ru
FIRST_SUPERUSER_PASSWORD=CHANGE_ME_SUPERUSER_PASSWORD

# ─── Certbot / SSL ─────────────────────────────────────────────────────────
CERTBOT_EMAIL=devops@plant-tracker.ru

